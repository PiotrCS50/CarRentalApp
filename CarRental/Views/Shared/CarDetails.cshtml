@model CarRental.Domain.Entities.RentalRecord

@Html.HiddenFor(c => c.Id, new { @class = "form-label" })
@Html.HiddenFor(c => c.Car.Id, new { @class = "form-control" })
@Html.LabelFor(c => c.Car.Brand, new { @class = "form-label" })
@Html.TextBoxFor(c => c.Car.Brand, new { @class = "form-control" })
@Html.LabelFor(c => c.Car.Model, new { @class = "form-label" })
@Html.TextBoxFor(c => c.Car.Model, new { @class = "form-control" })
@Html.LabelFor(c => c.Car.Capacity, new { @class = "form-label" })
@Html.TextBoxFor(c => c.Car.Capacity, new { @class = "form-control" })
@Html.LabelFor(c => c.Car.Type, new { @class = "form-label" })
@Html.TextBoxFor(c => c.Car.Type, new { @class = "form-control" })
@Html.LabelFor(c => c.Caution, new { @class = "form-label" })
@Html.TextBoxFor(c => c.Caution, new { @class = "form-control" })
@Html.LabelFor(c => c.Description, new { @class = "form-label" })
@Html.TextBoxFor(c => c.Description, new { @class = "form-control" })
@Html.LabelFor(c => c.Price, new { @class = "form-label" })
@Html.TextBoxFor(c => c.Price, new { @class = "form-control" })
<div>
    <div class="mt-2 mb-2">
        <label style="font-weight:bold">Zdjęcie</label>
    </div>
    <div style="position: relative">
        <a class='btn btn-outline-primary' href='javascript:;'>
            Wybierz zdjęcie...
            <input type="file" name="Image" size="40" style="position:absolute; z-index:2; top:0; left:0;
                            opacity: 0; background-color: transparent;" onchange="$('#upload-file-info').html($(this).val());">
        </a>
        <span class="border border-secondary bg-light rounded" id="upload-file-info" style="padding:5px 5px 5px 5px">Niewybrano pliku</span>
    </div>
    @if (Model != null)
    {
        if (Model.Car.ImageData == null)
        {
        <label>Brak zdjęcia</label>
        }
        else
        {
        <img class="img-thumbnail" width="150" height="150" src="@Url.Action("GetImage", "Home", new { Model.Car.Id })" />
        }
    }
</div>

