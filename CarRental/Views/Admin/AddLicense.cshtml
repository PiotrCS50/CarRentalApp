@model CarRental.Models.AddLicenseViweModel
@{
    ViewBag.Title = "AddLicense";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container col-8 mt-5">
    <h2>Dodaj numer rejestracyjny pojazdu</h2>
    <div class="mt-3">
        @using (Html.BeginForm("AddLicense","Admin", FormMethod.Post, new { id = "licenseForm"}))
        {
            <p>@Html.LabelFor(x => x.LicesneNumber)</p>
            @Html.HiddenFor(m => m.CarId)
            @Html.TextBoxFor(m => m.LicesneNumber)
            <p><small style="font-weight:bold; color:red;">@Html.ValidationSummary()</small></p>
        }
        <div class="mt-2 btn-group">
            <button type="submit" form="licenseForm" class="btn btn-success">Dodaj</button>
            <button class="btn btn-danger" onclick="location.href='@Url.Action("Cars", "Admin")'">Wróć</button>
        </div>
    </div>
</div>

