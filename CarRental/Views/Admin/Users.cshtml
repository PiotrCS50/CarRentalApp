@using CarRental.Domain.Entities
@model IEnumerable<User>

@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container col-8 mt-4">
    <h3>Użytkownicy</h3>
    <table class="table mt-4">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(m => m.UserName)</th>
                <th>@Html.DisplayNameFor(m => m.Name)</th>
                <th>@Html.DisplayNameFor(m => m.Surname)</th>
                <th>@Html.DisplayNameFor(m => m.AccountType)</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Name</td>
                    <td>@user.Surname</td>
                    <td>@user.AccountType.ToString()</td>
                    <td class="btn-group">
                        <button class="btn btn-outline-primary" onclick="location.href='@Url.Action("EditUser","Admin", new { username = user.UserName})'"><i class="bi bi-pencil-square"></i></button>
                        <button class="btn btn-outline-danger" onclick="location.href='@Url.Action("ResetPassword","Admin",new { username = user.UserName})'"><i class="bi bi-shield-lock"></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

